  pod 'Material', '~> 2.12'
  
  # Firebase
  pod 'Firebase/Core', '~> 5.8'
  pod 'Firebase/Database', '~> 5.8'
  pod 'Firebase/Auth', '~> 5.8'
  pod 'Firebase/Messaging', '~> 5.8'
  
end
